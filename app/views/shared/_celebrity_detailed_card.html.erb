<div class="card-detailed" style="width: 100%;">
  <%= cl_image_tag celebrity.photos.first.key, height: 300, width: 400, crop: :fill, style: "width: 100%; object-fit: cover;" %>
  <div class="card-body">
    <h5 class="card-title card-title-detailed"> <%= celebrity.name %> </h5>
    <p class="card-text"> <%= celebrity.description %> </p>
  </div>
  <div class="card-body card-body-info">
    <p class="card-text"> Location: <%= celebrity.location %> </p>
    <p class="card-text"> $<%= celebrity.price_per_day %> per day </p>
  </div>
  <div class="body">
    <a href="<%= new_celebrity_booking_path(celebrity) %>" class="btn btn-primary">Book</a>

    <%= link_to 'Delete', celebrity_path(celebrity),
        method: :delete,
        data: {confirm: "Do you want to remove this celebrity?"} %>
    <%= link_to 'Edit', edit_celebrity_path(celebrity) %>
  </div>
</div>
