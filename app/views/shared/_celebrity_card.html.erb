<div class="card" style="width: 100%;">
  <% if celebrity.photos.attached? %>
    <%= cl_image_tag celebrity.photos.first.key, height: 300, width: 400, crop: :fill, style: "width: 100%; object-fit: cover;" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"> <%= celebrity.name %> </h5>
    <p class="card-text"> <%= celebrity.description %> </p>
    <%= link_to 'Book', new_celebrity_booking_path(celebrity), class: "button-style" %>
    <%= link_to 'Details', celebrity_path(celebrity), class: "button-style" %>
  </div>
</div>
