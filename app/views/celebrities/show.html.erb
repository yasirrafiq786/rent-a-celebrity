<div class="container-fluid py-4">
  <%= render 'shared/celebrity_detailed_card', celebrity: @celebrity %>
  <div class="card">
    <div class="reviews-container">
    <h2>Reviews</h2>
    <p>
    <% @reviews.each do |review| %>
      <div class="review-container">
      <p><strong>Reviewed by: </strong><%= review.booking.user.first_name %> </p>
      <p><strong>Rating: <%= "⭐" * review.rating %> </strong></p>
      <div class="review"><%= review.content %></div>
      </div>
    <% end%>
    </p>
    </div>
  </div>
</div>
